<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <EditText
            android:id="@+id/nameTextField"
            android:layout_width="330dp"
            android:layout_height="49dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="39dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/weightTextField"
            android:layout_width="325dp"
            android:layout_height="51dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="42dp"
            android:ems="10"
            android:hint="Weight"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameTextField" />

        <EditText
            android:id="@+id/heightTextField"
            android:layout_width="331dp"
            android:layout_height="50dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:ems="10"
            android:hint="Growth"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weightTextField" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="209dp"
            android:layout_height="63dp"
            android:layout_marginStart="89dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="111dp"
            android:layout_marginBottom="16dp"
            android:text="Сохранить в БД"
            app:layout_constraintBottom_toTopOf="@+id/showButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heightTextField" />

        <Button
            android:id="@+id/showButton"
            android:layout_width="207dp"
            android:layout_height="56dp"
            android:layout_marginStart="89dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="113dp"
            android:text="Показать БД"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addButton" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="210dp"
            android:layout_height="57dp"
            android:layout_marginStart="89dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="110dp"
            android:text=" Очистить БД"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>